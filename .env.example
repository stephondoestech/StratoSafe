# StratoSafe Environment Configuration Template
# Copy to .env and fill in your values
# Use: make config (to auto-generate from this template)

# ================================
# Backend Configuration
# ================================

# Server Configuration
PORT=3001
NODE_ENV=development

# JWT Security (REQUIRED - Generate a strong secret)
# Use: openssl rand -base64 32
# CRITICAL: Must be at least 32 characters for security
JWT_SECRET=your_secure_32_character_jwt_secret_here

# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_USERNAME=stratosafe_user
DB_PASSWORD=your_secure_database_password
DB_DATABASE=stratosafe

# Optional: Enable SSL for database (set to 'true' for production)
DB_SSL=false

# File Upload Configuration
UPLOAD_DIR=uploads
MAX_FILE_SIZE=10485760

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Logging
LOG_LEVEL=info

# ================================
# Frontend Configuration
# ================================

# API Endpoint (React App)
# For development: http://localhost:3001/api
# For production: https://your-domain.com/api
REACT_APP_API_URL=http://localhost:3001/api

# ================================
# Docker Configuration
# ================================

# Docker Hub settings (optional)
DOCKERHUB_USERNAME=your_dockerhub_username
TAG=latest